# Comma-separated usernames to monitor
X_ACCOUNTS=elonmusk,trumpchinese1

# Poll interval in seconds
POLL_SECONDS=60

# Local SQLite DB file
DB_PATH=monitor_state.db

# Playwright options
HEADLESS=true
PLAYWRIGHT_BROWSER_CHANNEL=chrome
PAGE_TIMEOUT_MS=30000
MAX_POSTS_PER_CHECK=10
X_REQUIRE_LOGIN=true

# Optional: path to Playwright logged-in session state JSON.
# If X redirects to login, create this file via src/save_login_state.py and set it here.
PLAYWRIGHT_STORAGE_STATE=

# Recommended: persistent Playwright browser profile dir.
# This keeps your login active longer for 24/7 monitoring.
PLAYWRIGHT_USER_DATA_DIR=x_user_data

# Optional: Telegram notifications
# If both are set, notifications are sent to Telegram.
# If missing, notifications are printed to terminal.
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
